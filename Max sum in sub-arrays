//https://www.geeksforgeeks.org/maximum-sum-of-smallest-and-second-smallest-in-an-array/

class Solution {
    
    public static long pairWithMaxSum(long arr[], long N)
    {
        // Your code goes here
        long ans = 0;
        
        for(int i = 0; i < N - 1; i++){
         if(arr[i] + arr[i + 1] > ans) {
             ans = arr[i] + arr[i + 1];
         }
        }
        
        return ans;
    }
}
